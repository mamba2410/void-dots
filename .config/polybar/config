[colors]
;background = ${xrdb:background}
;background-alt = ${xrdb:color7}
background = #11ffffff
background-alt = 33ffffff

foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color11}

;change modules/filesystem as this is having trouble finding the colour
primary = #8e6659
secondary = #8e6659
alert = #8e6659

[fonts]
font-0 = Monospace:size=8;0
font-1 = "Font Awesome 5 Free:style=Solid:size=8;0"
font-2 = "Font Awesome 5 Brands:style=Solid:size=8;0"

;https://github.com/jaagr/polybar/wiki/Module:-script

[eths]
net-0 = enp5s0
net-1 = enp4s0

;################################################# SCREEN1 ###########################################################
[bar/screen1]
monitor = ${env:MONITOR:DVI-D-1}
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}

modules-left = i3
modules-center = date
modules-right = volume

enable-ipc = true

tray-position = none
tray-padding = 2
tray-background = ${colors.background}

wm-restack = i3
; true -> i3-gaps ignores it
; false -> i3-gaps goes around it
override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

;################################################# SCREEN2 ###########################################################
